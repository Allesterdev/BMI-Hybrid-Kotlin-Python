# AnÃ¡lisis de seguridad con CodeQL
# Detecta vulnerabilidades en cÃ³digo Kotlin/Java y Python

name: "CodeQL Security Analysis"

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]
  schedule:
    # Ejecutar anÃ¡lisis semanal los lunes a las 00:00
    - cron: '0 0 * * 1'
  workflow_dispatch:

jobs:
  analyze:
    name: ğŸ” CodeQL Analysis
    runs-on: ubuntu-latest
    permissions:
      actions: read
      contents: read
      security-events: write

    strategy:
      fail-fast: false
      matrix:
        language: [ 'java', 'python' ]

    steps:
      - name: ğŸ“¥ Checkout cÃ³digo
        uses: actions/checkout@v4

      - name: â˜• Setup JDK (para Java/Kotlin)
        if: matrix.language == 'java'
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'
          cache: 'gradle'

      - name: ğŸ Setup Python
        if: matrix.language == 'python'
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: ğŸ”§ Initialize CodeQL
        uses: github/codeql-action/init@v3
        with:
          languages: ${{ matrix.language }}
          queries: +security-and-quality

      - name: ğŸ”¨ Build Android App (para anÃ¡lisis Java/Kotlin)
        if: matrix.language == 'java'
        run: |
          chmod +x ./gradlew
          pip install pandas
          ./gradlew assembleDebug

      - name: ğŸ” Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3
        with:
          category: "/language:${{ matrix.language }}"

