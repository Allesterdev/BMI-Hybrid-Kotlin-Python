<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingBottom="80dp"
    android:clipToPadding="false"
    tools:context=".ui.opciones.AvisoLegalFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_volver_aviso_legal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_titulo_aviso_legal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aviso_legal_titulo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary_dark"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Card Aviso Legal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_standard"
                app:cardBackgroundColor="@color/input_background"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/disclaimer_texto"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- BotÃ³n Volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_volver_aviso_legal"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:backgroundTint="@color/green_primary"
        app:cornerRadius="24dp"
        app:icon="@drawable/outline_arrow_back_24"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/green_primary_dark"
        android:contentDescription="@string/volver" />

</androidx.constraintlayout.widget.ConstraintLayout>
