<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.historial.HistorialFragment">

    <TextView
        android:id="@+id/text_historial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_historial_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_historial"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Contenedor tipo pill deslizante simplificado -->
    <FrameLayout
        android:id="@+id/toggle_container"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:background="@drawable/pill_container_background"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_historial_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <!-- Píldora blanca deslizante -->
        <View
            android:id="@+id/sliding_pill"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/sliding_pill_background"
            android:layout_gravity="start"
            android:layout_marginTop="0dp" />

        <!-- Contenedor de botones transparentes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_adultos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_adultos"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_menores"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/title_menores"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_historial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toggle_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tv_historial_vacio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/historial_vacio"
        android:textSize="16sp"
        android:textColor="#888888"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toggle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botón verde en forma de píldora -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ver_grafico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_grafico"
        android:textColor="@android:color/white"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/green_primary"
        app:cornerRadius="24dp"
        app:rippleColor="@color/green_primary_dark" />
</androidx.constraintlayout.widget.ConstraintLayout>
