<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.adultos.AdultosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_calculadora_adultos"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card para los inputs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F1F8E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Campo Peso -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#2E7D32"
                    android:hint="@string/hint_peso">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#2E7D32"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Altura -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_altura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="#4CAF50"
                    app:hintTextColor="#2E7D32"
                    android:hint="@string/hint_altura">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_altura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#2E7D32"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón Calcular -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calcular"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_calcular_imc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="#4CAF50"
                    app:cornerRadius="28dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card para los resultados -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_resultado"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_imc_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imc_inicial"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1B5E20"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_interpretacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Barra de IMC -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_escala_imc"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.example.calculadoraimc.ui.views.BarraIMC
                    android:id="@+id/barra_imc"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp" />

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/btn_guardar_historial"
                    android:textSize="16sp"
                    app:backgroundTint="#66BB6A"
                    app:cornerRadius="24dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
