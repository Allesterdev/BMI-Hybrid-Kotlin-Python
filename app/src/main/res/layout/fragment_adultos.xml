<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingBottom="@dimen/bottom_nav_padding_scroll"
    android:clipToPadding="false"
    tools:context=".ui.adultos.AdultosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_standard">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_calculadora_adultos"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary_dark"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Card para los inputs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_standard"
            app:cardBackgroundColor="@color/input_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <!-- Campo Peso -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/green_primary"
                    app:hintTextColor="@color/green_primary_dark"
                    app:boxBackgroundColor="@color/green_primary_light"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:hint="@string/hint_peso"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Altura -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_altura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/green_primary"
                    app:hintTextColor="@color/green_primary_dark"
                    app:boxBackgroundColor="@color/green_primary_light"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_altura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:hint="@string/hint_altura"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón Calcular -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calcular"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_calcular_imc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/green_primary"
                    app:cornerRadius="28dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card para los resultados -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_standard"
            app:cardBackgroundColor="@color/input_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_resultado"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_imc_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imc_inicial"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_interpretacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Barra de IMC -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_escala_imc"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.example.calculadoraimc.ui.views.BarraIMC
                    android:id="@+id/barra_imc"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp" />

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/btn_guardar_historial"
                    android:textSize="16sp"
                    app:backgroundTint="@color/green_primary"
                    app:cornerRadius="24dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
