<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingBottom="@dimen/bottom_nav_padding_scroll"
    android:clipToPadding="false"
    tools:context=".ui.menores.MenoresFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_standard">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_calculadora_menores"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary_dark"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Card informativo sobre percentiles OMS -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_standard"
            app:cardBackgroundColor="@color/input_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <!-- Botón para mostrar/ocultar información -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_mostrar_info"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/green_primary_light"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_dialog_info"
                    app:iconTint="@color/white"
                    style="@style/Widget.Material3.Button.TonalButton" />

                <!-- Texto informativo (inicialmente oculto) -->
                <TextView
                    android:id="@+id/tv_info_percentiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/info_percentiles_oms"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card para los inputs -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_standard"
            app:cardBackgroundColor="@color/input_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <!-- Campo Peso -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/green_primary"
                    app:hintTextColor="@color/green_primary_dark"
                    app:boxBackgroundColor="@color/green_primary_light"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:hint="@string/hint_peso"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Altura -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_altura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/green_primary"
                    app:hintTextColor="@color/green_primary_dark"
                    app:boxBackgroundColor="@color/green_primary_light"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_altura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/white"
                        android:hint="@string/hint_altura"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campos para sistema imperial (pies y pulgadas) -->
                <LinearLayout
                    android:id="@+id/layout_altura_imperial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone">

                    <!-- Campo para pies -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_altura_pies"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary_dark"
                        app:boxBackgroundColor="@color/green_primary_light"
                        app:boxBackgroundMode="filled">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_altura_pies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:hint="@string/hint_altura_pies"
                            android:textColorHint="@color/text_secondary"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo para pulgadas -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_altura_pulgadas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:boxStrokeColor="@color/green_primary"
                        app:hintTextColor="@color/green_primary_dark"
                        app:boxBackgroundColor="@color/green_primary_light"
                        app:boxBackgroundMode="filled">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_altura_pulgadas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:hint="@string/hint_altura_pulgadas"
                            android:textColorHint="@color/text_secondary"
                            android:textSize="18sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Campo Fecha de Nacimiento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_fecha_nacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/green_primary"
                    app:hintTextColor="@color/green_primary_dark"
                    app:boxBackgroundColor="@color/green_primary_light"
                    app:boxBackgroundMode="filled">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:imeOptions="actionDone|flagNoExtractUi"
                        android:maxLength="10"
                        android:textColor="@color/white"
                        android:hint="@string/hint_fecha_nacimiento"
                        android:textColorHint="@color/text_secondary"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Selector de Sexo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_sexo"
                    android:textSize="16sp"
                    android:textColor="@color/green_primary_dark"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rg_sexo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <RadioButton
                        android:id="@+id/rb_masculino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_masculino"
                        android:textColor="@color/green_primary_dark"
                        app:buttonTint="@color/green_primary"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_femenino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/radio_femenino"
                        android:textColor="@color/green_primary_dark"
                        app:buttonTint="@color/green_primary" />
                </RadioGroup>

                <!-- Botón Calcular -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_calcular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/button_min_height"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/btn_calcular_percentil"
                    android:textSize="@dimen/button_text_size"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="@dimen/button_text_size_small"
                    android:autoSizeMaxTextSize="@dimen/button_text_size"
                    android:autoSizeStepGranularity="1sp"
                    app:backgroundTint="@color/green_primary"
                    app:cornerRadius="@dimen/button_corner_radius"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card para los resultados -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_standard"
            app:cardBackgroundColor="@color/input_background"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_standard">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_resultado"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_imc_valor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imc_inicial"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_percentil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/percentil_inicial"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_interpretacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@color/green_primary_dark"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Barra de Percentiles para Menores -->
                <com.example.calculadoraimc.ui.views.BarraPercentil
                    android:id="@+id/barra_percentil_menores"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/btn_guardar_historial"
                    android:textSize="16sp"
                    app:backgroundTint="@color/green_primary"
                    app:cornerRadius="24dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
