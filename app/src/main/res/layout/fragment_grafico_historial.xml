<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingBottom="80dp"
    android:clipToPadding="false"
    tools:context=".ui.historial.GraficoHistorialFragment">

    <!-- Contenedor toggle (reutiliza estilo tipo pill) -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_titulo_grafico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/titulo_grafico_historial"
        android:textColor="@color/green_primary_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/toggle_container_chart"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pill_container_background"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo_grafico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/sliding_pill_chart"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_gravity="start"
            android:background="@drawable/sliding_pill_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_chart_adultos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_adultos"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/btn_chart_menores"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/title_menores"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </FrameLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toggle_container_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_volver_historial" />

    <!-- BotÃ³n Volver -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_volver_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/btn_volver_historial"
        android:textColor="@color/white"
        app:backgroundTint="@color/green_primary"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/green_primary_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
