<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.opciones.OpcionesFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_nav_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_standard">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_opciones"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary_dark"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Card Información y Legal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_standard"
                app:cardBackgroundColor="@color/input_background"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información y Legal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_aviso_legal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aviso Legal"
                        android:layout_marginBottom="12dp"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/green_primary_light"
                        app:cornerRadius="@dimen/button_corner_radius"
                        app:icon="@drawable/outline_gavel_24"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_acerca_de"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acerca de"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/green_primary_light"
                        app:cornerRadius="@dimen/button_corner_radius"
                        app:icon="@drawable/outline_info_24"
                        app:iconGravity="start" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección Gestión de Datos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation_standard"
                app:cardBackgroundColor="@color/input_background"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/borrar_historiales_titulo"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_borrar_historial_adultos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/btn_borrar_historial_adultos"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/warning_orange"
                        app:cornerRadius="@dimen/button_corner_radius"
                        app:icon="@drawable/outline_person_24"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_borrar_historial_menores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/btn_borrar_historial_menores"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/warning_orange"
                        app:cornerRadius="@dimen/button_corner_radius"
                        app:icon="@drawable/outline_supervisor_account_24"
                        app:iconGravity="start" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_borrar_todos_historiales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_borrar_todos_historiales"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/danger_red"
                        app:cornerRadius="@dimen/button_corner_radius"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/danger_red" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
