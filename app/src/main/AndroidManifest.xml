<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permiso para acceso a internet necesario para AdMob -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ChaquopyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalculadoraIMC">

        <!-- ConfiguraciÃ³n de AdMob -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3183197075562187~8423151311"/>

        <meta-data
            android:name="com.google.android.gms.ads.flag.OPTIMIZE_INITIALIZATION"
            android:value="true" />

        <!-- MainActivity con API moderna de SplashScreen -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CalculadoraIMC.Splash"
            android:configChanges="orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity para mostrar las licencias completas -->
        <activity
            android:name=".ui.opciones.LicencesActivity"
            android:exported="false"
            android:label="@string/licencias_titulo" />

    </application>

</manifest>